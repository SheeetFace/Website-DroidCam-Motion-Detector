{
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/features",
        "destination": "/features.html"
      },
      {
        "source": "/faq",
        "destination": "/faq.html"
      },
      {
        "source": "/about",
        "destination": "/about.html"
      },
      {
        "source": "/integrations",
        "destination": "/integrations.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}

